<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="356.0" minWidth="536.0" prefHeight="600.0" prefWidth="800.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NewGameController">

    <HBox alignment="CENTER" spacing="100.0">
        <ImageView fx:id="snakeImage" fitHeight="64" fitWidth="64" />
        <ImageView fx:id="dragonImage" fitHeight="64" fitWidth="64" />
        <ImageView fx:id="dogImage" fitHeight="64.0" fitWidth="64.0" />
        <ImageView fx:id="goombaImage" fitHeight="64" fitWidth="64" />
    </HBox>
   <HBox alignment="CENTER" prefHeight="163.0" prefWidth="791.0">
      <children>
         <TextArea editable="false" prefHeight="145.0" prefWidth="155.0" text="Snake:&#10;More health&#10;Needs less sleep&#10;" wrapText="true" />
         <TextArea editable="false" prefHeight="163.0" prefWidth="160.0" text="Dragon:&#10;More Health&#10;Sustains less damage&#10;Needs more sleep&#10;" wrapText="true" />
         <TextArea editable="false" prefHeight="163.0" prefWidth="158.0" text="Dog:&#10;Gets sad easily&#10;Gets hungry quickly&#10;Needs lots of play&#10;&#10;" wrapText="true" />
         <TextArea editable="false" prefHeight="163.0" prefWidth="146.0" text="Goomba:&#10;Needs little sleep&#10;Needs little food&#10;Gets hurt easilty&#10;" wrapText="true" />
      </children>
   </HBox>

    <TextField fx:id="nameField" prefHeight="26.0" prefWidth="677.0" promptText="Write Pet Name Here!">
      <VBox.margin>
         <Insets left="300.0" right="300.0" />
      </VBox.margin></TextField>
    <ComboBox fx:id="petTypes" promptText="Select Pet Option" />
    <Button fx:id="createBtn" text="Select Pet and Create new game!" />
   <Label fx:id="errorLabel" prefHeight="18.0" prefWidth="114.0" textAlignment="CENTER" textFill="#ff0303" />
   <Button fx:id="backBtn" mnemonicParsing="false" text="Return to main menu" />
</VBox>
